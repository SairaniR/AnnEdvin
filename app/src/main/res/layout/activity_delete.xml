<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeleteActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#524F4F"
        app:title="ZEAL"
        app:titleMarginStart="40dp"
        app:logo="@drawable/ic_black"
        android:paddingTop="0dp"
        >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAB0B0">

        <EditText
            android:id="@+id/editTextItemsPurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:text="@string/delete" />
        <TextView
            android:id="@+id/textViewItemsCount"
            android:layout_width="450dp"
            android:layout_height="250dp"
            android:layout_below="@+id/editTextItemsPurchased"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/textview_border"
            android:text=""/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:layout_below="@+id/textViewItemsCount"
            android:layout_centerHorizontal="true"
            android:text="@string/delete"/>

    </RelativeLayout>
</LinearLayout>